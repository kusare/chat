{
  "plugins": ["stylelint-order"],
  "extends": ["stylelint-config-standard-scss"],
  "customSyntax": "postcss-scss",
  "rules": {
    "selector-class-pattern": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "string-quotes": "single",
    "order/properties-alphabetical-order": true
  },
  "ignoreFiles": ["**/node_modules/**"]
}
